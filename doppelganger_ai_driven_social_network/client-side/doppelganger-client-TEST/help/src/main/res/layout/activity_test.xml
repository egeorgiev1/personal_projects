<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.TestActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textSize="32dp"
                android:textColor="#000000"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:id="@+id/login_email"
                android:text="emilxp4@gmail.com"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:id="@+id/login_password"
                android:text="12345"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LOGIN"
                android:id="@+id/login_button"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register"
                android:textSize="32dp"
                android:textColor="#000000"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:id="@+id/register_email"
                android:text="emilxp4@gmail.com"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:id="@+id/register_password"
                android:text="12345"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Password"
                android:id="@+id/register_confirm_password"
                android:text="12345"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="REGISTER"
                android:id="@+id/register_button"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textSize="32dp"
                android:textColor="#000000"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LOGOUT"
                android:id="@+id/logout_button"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete User"
                android:textSize="32dp"
                android:textColor="#000000"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DELETE USER"
                android:id="@+id/delete_user_button"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Set User Info"
                android:textSize="32dp"
                android:textColor="#000000"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:id="@+id/user_name"
                android:text="Emil Georgiev"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Occupation"
                android:id="@+id/user_occupation"
                android:text="Programmer"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Birthday"
                android:id="@+id/user_birthday"
                android:text="1998-01-23"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Interests"
                android:id="@+id/user_interests"
                android:text="some, bla, bla"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Introduction"
                android:id="@+id/user_introduction"
                android:text="some introduction"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SET USER INFO"
                android:id="@+id/set_user_info_button"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Set Profile Picture"
                android:textSize="32dp"
                android:textColor="#000000"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PICK PROFILE PICTURE"
                android:id="@+id/set_profile_picture_button"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Set Matchmaking Picture"
                android:textSize="32dp"
                android:textColor="#000000"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PICK MATCHMAKING PICTURE"
                android:id="@+id/set_matchmaking_picture_button"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User Info"
                android:textSize="32dp"
                android:textColor="#000000"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:id="@+id/user_info_email"
                android:text="emilxp4@gmail.com"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:id="@+id/profile_picture_view"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="[user info object dump]"
                android:id="@+id/user_info_view"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GET USER INFO"
                android:id="@+id/get_user_info_button"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Matches"
                android:textSize="32dp"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="[matches dump]"
                android:id="@+id/matches_view"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GET MATCHES"
                android:id="@+id/get_matches_button"/>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>