<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MatchmakingActivity"
    android:orientation="vertical"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/background_gradient_nav"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:background="@drawable/background_gradient_nav"
        android:elevation="5dp"
        android:layout_marginTop="-35dp">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu"
            android:layout_marginTop="57dp"
            android:layout_marginLeft="30dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:id="@+id/menu_button"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="26sp"
            android:text="Matchmaking"
            android:layout_marginLeft="57dp"
            android:layout_marginTop="55dp"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_gradient">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_left"
            android:layout_marginLeft="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_gravity="center_vertical"
            android:id="@+id/back_button"/>

        <android.support.v7.widget.CardView
            android:layout_width="465dp"
            android:layout_height="700dp"
            android:elevation="12dp"
            android:shape="ring"
            android:innerRadius="0dp"
            android:thicknessRatio="1.9"
            app:cardCornerRadius="15dp"
            android:padding="0dp"
            android:layout_gravity="center"
            app:cardPreventCornerOverlap="false">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <android.support.v7.widget.CardView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center_horizontal"
                        android:elevation="12dp"
                        android:shape="ring"
                        android:innerRadius="0dp"
                        android:thicknessRatio="1.9"
                        app:cardCornerRadius="100dp"
                        app:cardElevation="5dp"
                        android:layout_marginTop="52dp">
                        <ImageView
                            android:layout_height="200dp"
                            android:layout_width="match_parent"
                            android:id="@+id/profile_picture_view"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true">
                        </ImageView>
                    </android.support.v7.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textSize="26sp"
                        android:text="Leonardo DiCaprio"
                        android:layout_marginTop="49dp"
                        android:textColor="@android:color/black"
                        android:id="@+id/name_view"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textSize="20sp"
                        android:text="Got an Oscar recently for fighting a bear."
                        android:textColor="#656565"
                        android:id="@+id/introduction_view"/>

                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:rowCount="3"
                        android:columnCount="3"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="52dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_calendar"
                            android:tint="@android:color/black"
                            android:layout_gravity="center_vertical"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:text="Birthday"
                            android:textColor="@android:color/black"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="52dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text="11/11/1998"
                            android:textColor="@android:color/black"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="32dp"
                            android:id="@+id/birthday_view"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_suitcase"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="41dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:text="Occupation"
                            android:textColor="@android:color/black"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="41dp"
                            android:layout_marginLeft="52dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text="Actor"
                            android:textColor="@android:color/black"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="41dp"
                            android:layout_marginLeft="32dp"
                            android:id="@+id/occupation_view"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_star"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="41dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:text="Interests"
                            android:textColor="@android:color/black"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="41dp"
                            android:layout_marginLeft="52dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text="Acting, Bears, Oscars"
                            android:textColor="@android:color/black"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="41dp"
                            android:layout_marginLeft="32dp"
                            android:id="@+id/interests_view"/>
                    </GridLayout>
                </LinearLayout>

                <Button
                    android:layout_width="485dp"
                    android:layout_height="74dp"
                    android:theme="@style/AppTheme.Button"
                    android:text="START CONVERSATION"
                    android:layout_marginLeft="-10dp"
                    android:layout_marginBottom="-10dp"
                    android:textSize="20sp"
                    android:drawableStart="@drawable/ic_message"
                    android:paddingBottom="10dp"
                    android:paddingLeft="120dp"
                    android:drawablePadding="-100dp"
                    android:textColor="@android:color/white"
                    android:id="@+id/start_conversation_button"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_right"
            android:layout_marginRight="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_gravity="center_vertical|right"
            android:id="@+id/forward_button"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:text="Click the buttons to find doppelgängers"
            android:layout_marginBottom="100dp"
            android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal|bottom"/>

    </FrameLayout>

</android.support.v7.widget.LinearLayoutCompat>