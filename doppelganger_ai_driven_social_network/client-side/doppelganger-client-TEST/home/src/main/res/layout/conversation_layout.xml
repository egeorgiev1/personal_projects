<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:elevation="12dp"
        android:shape="ring"
        android:innerRadius="0dp"
        android:thicknessRatio="1.9"
        app:cardCornerRadius="3dp"
        android:layout_marginVertical="12dp"
        android:layout_marginHorizontal="75dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingVertical="15dp"
            android:paddingHorizontal="20dp">

            <android.support.v7.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:elevation="12dp"
                android:shape="ring"
                android:innerRadius="0dp"
                android:thicknessRatio="1.9"
                app:cardCornerRadius="30dp"
                android:layout_gravity="center_vertical">
                <ImageView
                    android:layout_height="60dp"
                    android:layout_width="match_parent"
                    android:id="@+id/profile_picture_view"
                    android:src="#999999"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true">
                </ImageView>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp">

                <!-- da vida ellipsis, limit da bude na edin red, da vida max number of characters ili max horizontal size -->
                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/name_view"
                    android:textColor="#000000"
                    android:text="*No Name Available*"
                    android:textSize="18sp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:paddingVertical="1.5dp"/>

                <!-- da vida ellipsis, limit da bude na edin red, da vida max number of characters ili max horizontal size -->
                <TextView
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/last_message_view"
                    android:text="I see you're a man of culture as well..."
                    android:textSize="16sp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:paddingVertical="1.5dp"/>
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.v7.widget.LinearLayoutCompat>