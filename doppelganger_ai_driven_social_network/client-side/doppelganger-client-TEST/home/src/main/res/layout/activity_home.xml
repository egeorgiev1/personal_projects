<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.HomeActivity"
    android:orientation="vertical"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:fitsSystemWindows="true"
    android:background="@drawable/background_gradient">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="560dp"
        android:elevation="5dp"
        android:orientation="vertical"
        android:background="@drawable/background_gradient"
        android:layout_marginTop="-35dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_menu_home"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_marginTop="52dp"
                android:layout_marginLeft="26dp"
                android:id="@+id/menu_button"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="26sp"
                android:text="Home"
                android:layout_marginLeft="52dp"
                android:layout_marginTop="58dp"
                android:textColor="@android:color/white"/>
        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="-3dp">

            <ImageView
                android:layout_width="610dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="-3dp"
                android:src="@drawable/droplets"/>

            <android.support.v7.widget.CardView
                android:layout_width="185dp"
                android:layout_height="185dp"
                android:elevation="12dp"
                android:shape="ring"
                android:innerRadius="0dp"
                android:thicknessRatio="1.9"
                app:cardCornerRadius="90dp"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="60dp">
                <ImageView
                    android:layout_height="185dp"
                    android:layout_width="match_parent"
                    android:id="@+id/profile_picture_view"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true">
                </ImageView>
            </android.support.v7.widget.CardView>

            <ImageButton
                android:layout_width="185dp"
                android:layout_height="185dp"
                android:layout_marginRight="18dp"
                android:background="@drawable/round_button"
                android:src="@drawable/ic_search"
                android:layout_gravity="right"
                android:layout_marginTop="60dp"
                android:id="@+id/matchmaking_button"/>

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="22sp"
                android:text="Leonardo DiCaprio"
                android:maxLines="2"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="267dp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:id="@+id/user_name_view"/>

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="22sp"
                android:text="Search DoppelgÃ¤nger"
                android:maxLines="2"
                android:layout_marginRight="18dp"
                android:layout_marginTop="267dp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_gravity="bottom|right"/>

        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="0dp"
        android:orientation="vertical"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_time"
                android:layout_marginTop="23dp"
                android:layout_marginLeft="38dp"
                android:background="#00000000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="26sp"
                android:text="Recent Conversations"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="19dp"
                android:layout_marginBottom="10dp"
                android:textColor="#FF4081"/>
        </LinearLayout>

        <ListView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/recent_conversations_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
</android.support.v7.widget.LinearLayoutCompat>